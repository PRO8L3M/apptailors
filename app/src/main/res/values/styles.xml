<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/red</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="CommonTextStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/gibson_regular</item>
    </style>

    <style name="AnswerTextStyle" parent="CommonTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/answer_text_color</item>
    </style>

    <style name="AuthorTextStyle" parent="CommonTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/author_text_color</item>
    </style>

    <style name="QuestionTextStyle" parent="CommonTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/question_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="StreamListTitle" parent="CommonTextStyle">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="StreamListDescription" parent="CommonTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="StreamViewState" parent="CommonTextStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">@dimen/padding_small_2dp</item>
    </style>

    <style name="StreamViewTitle" parent="CommonTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StreamViewDescription" parent="CommonTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/stream_view_description</item>
    </style>
</resources>
